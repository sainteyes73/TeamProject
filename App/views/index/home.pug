extends ../templayout

include ../mixins/thumbnail

block content
    #myCarousel.carousel.slide(data-ride="carousel")
      // Indicators
      ol.carousel-indicators
        li.active(data-target="#myCarousel", data-slide-to="0")
        |             
        li(data-target="#myCarousel", data-slide-to="1")
        |             
        li(data-target="#myCarousel", data-slide-to="2")
      |           
      .carousel-inner(role="listbox")
        .item.active(style="width: 100%; height: 600px; overflow: hidden")
          img.centered-and-cropped(src="https://cdn.instructables.com/ORIG/F0Q/01PE/IRXTPT1G/F0Q01PEIRXTPT1G.jpg", data-url="https://cdn.instructables.com/ORIG/F0Q/01PE/IRXTPT1G/F0Q01PEIRXTPT1G.jpg", alt="Cardboard Contest", height="600", width="100%")
          |               
          .container
            .carousel-caption
        |             
        .item(style="width: 100%; height: 600px; overflow: hidden")
          img.centered-and-cropped(src="https://cdn.instructables.com/ORIG/FKV/W77T/J1MF1RWU/FKVW77TJ1MF1RWU.jpg", data-url="https://cdn.instructables.com/ORIG/FKV/W77T/J1MF1RWU/FKVW77TJ1MF1RWU.jpg", alt="Robotics Contest", height="600", width="100%")
          |               
          .container
            .carousel-caption
        |             
        .item(style="width: 100%; height: 600px; overflow: hidden")
          img(src="https://cdn.instructables.com/ORIG/F2E/4TTJ/J1CEW1N5/F2E4TTJJ1CEW1N5.jpg", data-url="https://cdn.instructables.com/ORIG/F2E/4TTJ/J1CEW1N5/F2E4TTJJ1CEW1N5.jpg", alt="Gardening Contest", height="600", width="100%")
          |               
          .container
            .carousel-caption
      |           
      a.left.carousel-control(href="#myCarousel", role="button", data-slide="prev")
        span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
        |             
        span.sr-only Previous
      |           
      a.right.carousel-control(href="#myCarousel", role="button", data-slide="next")
        span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
        |             
        span.sr-only Next
    
    

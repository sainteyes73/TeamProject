  body
    // Fixed navbar
    
    nav.navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/index') buildCoolStuff.tech
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/index') Home
            li
              a(href='/projects/list') Projects
            if (!user)
              li
                a(href='/accounts/login') Login/Signup
            else
              li
                a(href='/projects/dashboard') DashBoard
              li
                a(href='/accounts/settings') Settings
              li
                a(href='/accounts/logout') Logout
              if (user.permissions == "administrator")
                li
                  a(href='/administration/adminpage') Admin
        // /.nav-collapse
        
    // Begin page content
    
    include includes/alert
